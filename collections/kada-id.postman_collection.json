  "info": {
    "name": "Kada ID API",
    "_postman_id": "1d6d3b32-2f78-4c24-9ab5-0c6cd1fc5d11",
    "description": "Collection to exercise Kada ID authentication and user-management routes with admin-only RBAC checks.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "description": "Authentication lifecycle endpoints.",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Login request succeeded\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let jsonData = {};",
                  "try {",
                  "  jsonData = pm.response.json();",
                  "} catch (error) {",
                  "  console.warn('Response was not JSON');",
                  "}",
                  "",
                  "if (jsonData && jsonData.data && jsonData.data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "}",
                  "",
                  "if (jsonData && jsonData.data && jsonData.data.user) {",
                  "  var currentUser = jsonData.data.user;",
                  "  if (currentUser.email) {",
                  "    pm.collectionVariables.set('currentUserEmail', currentUser.email);",
                  "  }",
                  "  if (currentUser.role) {",
                  "    pm.collectionVariables.set('currentUserRole', currentUser.role);",
                  "  }",
                  "}",
                  "",
                  "const setCookieHeader = pm.response.headers.get('set-cookie');",
                  "if (setCookieHeader) {",
                  "  const refreshMatch = setCookieHeader.match(/refreshToken=([^;]+)/);",
                  "  if (refreshMatch && refreshMatch[1]) {",
                  "    pm.collectionVariables.set('refreshToken', refreshMatch[1]);",
                  "  }",
                  "}",
                  "",
                  "pm.test(\"Access token stored\", function () {",
                  "  pm.expect(pm.collectionVariables.get('accessToken')).to.be.a('string');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Profile fetched\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Refresh Access Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Cookie",
                "value": "refreshToken={{refreshToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Token refreshed\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let jsonData = {};",
                  "try {",
                  "  jsonData = pm.response.json();",
                  "} catch (error) {",
                  "  console.warn('Response was not JSON');",
                  "}",
                  "",
                  "if (jsonData && jsonData.data && jsonData.data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "}",
                  "",
                  "const setCookieHeader = pm.response.headers.get('set-cookie');",
                  "if (setCookieHeader) {",
                  "  const refreshMatch = setCookieHeader.match(/refreshToken=([^;]+)/);",
                  "  if (refreshMatch && refreshMatch[1]) {",
                  "    pm.collectionVariables.set('refreshToken', refreshMatch[1]);",
                  "  }",
                  "}",
                  "",
                  "pm.test(\"Access token updated\", function () {",
                  "  pm.expect(pm.collectionVariables.get('accessToken')).to.be.a('string');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Logged out\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.collectionVariables.unset('accessToken');",
                  "pm.collectionVariables.unset('refreshToken');"
                ]
              }
            }
          ]
        }
      ]
    },
